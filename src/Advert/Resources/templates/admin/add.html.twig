{% extends "@Common/admin/layout.html.twig" %}

{% block body %}
    <form  action="/admin/adverts/add_action" method="POST">
        <div class="form-group">
           <label for="advert-title">Title:</label>
            <input id="advert-title" class="form-control" name="title" {% if advert.title %}value="{{ advert.title }}"{% endif %} required/>
        </div>

        <div class="form-group">
            <label for="advert-message">Message:</label>
            <textarea name="message" class="form-control" id="advert-message" rows="10" cols="30" required>{% if advert.message %}{{ advert.message }}{% endif %}</textarea>
        </div>

        <div class="form-group">
            <label for="advert-phone-number">Phone number:</label>
            <input id="advert-phone-number" class="form-control" name="phone" placeholder="078123456" {% if advert.phone %}value="{{ advert.phone }}"{% endif %} required/>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input type="hidden" name="status" value="0"/>
                <input type="checkbox" id="advert-status" class="form-check-input" name="status" value="1" {% if advert.status is defined and not advert.status %}{% else %}checked{% endif %}/>
                <label class="form-check-label" for="advert-status">Status</label>
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-primary mb-2">Submit</button>
        </div>
    </form>
{% endblock body %}